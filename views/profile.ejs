<% include ./partials/header %>
 <div class='container'>
         <h3 style='margin-top: 0px;'>Edit Your Profile</h3>
     <form class='form' action='/profile' method='POST'>
         <div class='form-group'>
             <label for='cityField'>City</label>
             <input type='text' class='form-control' id='cityField' name='cityField' placeholder='Enter your city'>
         </div>
         <div class='form-group'>
         <label for='stateField'>State or Province</label>
             <input type='text' class='form-control' id='stateField' name='stateField' placeholder='Enter your State or Province'>
         </div>
         <button type='submit' class='btn btn-primary'>Update Profile</button>
     </form>
     <hr>
     <h3>Current User Settings</h3>
    <div class='row well'>
        <div class='col col-md-1'>
            <strong>City:</strong>
        </div>
        <div class='col col-md-3'>
           <% if (currentUser.city==null) { %>
            <p>Not set yet</p>
            <% } else { %>
            <p><%=currentUser.city%></p>
            <% } %>
        </div>
    
        <div class='col col-md-2'>
            <strong>State or Province:</strong>
        </div>
        <div class='col col-md-2'>
            <% if (currentUser.statecountry==null) { %>
            <p>Not set yet</p>
            <% } else { %>
            <p><%=currentUser.statecountry%></p>
            <% } %>
        </div>
    </div>
     </div>
     <script>
 $(startup);
 function startup(){
  $(".nav li").removeClass("active");
   $('#profile').addClass('active');
 }
</script>
 <% include ./partials/footer %>    